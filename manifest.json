{
  "manifest_version": 3,
  "name": "ArXiv to Blog",
  "version": "1.0.4",
  "description": "Easily redirect from arXiv papers to Blog for enhanced reading experience",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://arxiv.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ArXiv to Blog"
  },
  "content_scripts": [
    {
      "matches": [
        "https://arxiv.org/abs/*",
        "https://arxiv.org/pdf/*"
      ],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 